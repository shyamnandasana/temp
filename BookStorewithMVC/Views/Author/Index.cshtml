@model List<AuthorModel>

@{
    ViewData["Title"] = "Authors List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0  mt-5">Author List</h2>
    </div>
<a asp-action="AddEdit" asp-controller="Author" class="btn btn-success mb-3">Add New Author</a>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Author ID</th>
            <th>Author Name</th>
            <th>User ID</th> 
            <th>Created At</th>
            <th>Modified At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var author in Model)
            {
                <tr>
                    <td>@author.AuthorId</td>
                    <td>@author.Name</td>
                        <td>@author.FullName</td>
                        <td>@(author.CreatedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(author.ModifiedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>
                        <a asp-action="AddEdit" asp-route-id="@author.AuthorId"  class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@author.AuthorId"  onclick="return confirm('Are you sure?')" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No authors found.</td>
            </tr>
        }
    </tbody>
</table>
</div>


